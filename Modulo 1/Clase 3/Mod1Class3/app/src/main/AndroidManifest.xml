<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcodee.mod1class3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".aplicacion.Configuracion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- portrait es de forma vertical
         landscape es de forma horizontal -->
        <activity
            android:name=".ListadoActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".DetalleActivity"></activity>
    </application>

</manifest>