<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcodee.mod1class1"
    android:versionCode="1"
    android:versionName="1.0">
    <!--
     package, es el id único en la play store
     versionCode, es la versión de nuestro código, el cual con cada versión en la play store se auto incrementa
     versionName, es la versión que puede visualizar el usuario
     -->

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <!--
    maxSdkVersion, la versión máxima que soportara nuestra aplicación
    minSdkVersion, la versión minima que soportara nuestra aplicación
    targetSdkVersion, la versión en la que se compila nuestra aplicación
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>